  "scripts": {
    "prepare": "husky install && chmod ug+x .husky/*",
    "dev": "pnpm run clean && ts-node -r tsconfig-paths/register scripts/bundler/bundler.ts",
    "build": "pnpm run clean && turbo run build",
    "clean": "pnpm --parallel --no-bail run clean",
    "format": "turbo run format --",
    "typecheck": "turbo run typecheck --",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@react-raw/bundler": "workspace:*",
    "@react-raw/lib": "workspace:*",
    "@react-raw/linter": "workspace:*",
    "@react-raw/lint_staged": "workspace:*",
    "@types/node": "^20.3.1",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "rimraf": "^5.0.1",
    "rollup": "^3.21.0",
    "stale-dep": "^0.6.0",
    "ts-node": "^10.9.1",
    "tsc-files": "^1.1.3",
    "turbo": "^1.10.3",
    "type-fest": "^3.12.0",
    "typescript": "5.0.3",
    "zx": "^7.2.2"
  }
}
